<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_gray"
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/history_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|top"
                android:lines="2"
                android:maxLines="2"
                android:textColor="@color/btn_gray"
                android:textSize="64sp" />

            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end|center"
                android:text="0"
                android:textColor="@color/btn_gray"
                android:textSize="64sp" />
        </LinearLayout>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#B0B7C0"
            android:gravity="center"
            android:paddingHorizontal="8dp">

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_ce"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="CE" />

                <Button
                    android:id="@+id/btn_c"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="C" />

                <Button
                    android:id="@+id/btn_bs"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="BS" />

                <Button
                    android:id="@+id/btn_divide"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="/" />
            </TableRow>

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_7"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_8"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_9"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_multiply"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="X" />
            </TableRow>

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_4"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_5"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_6"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_minus"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="-" />
            </TableRow>

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_1"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_2"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_3"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_plus"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="+" />
            </TableRow>

            <TableRow android:gravity="center">

                <Button
                    android:id="@+id/btn_positive_negative"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="+/-" />

                <Button
                    android:id="@+id/btn_0"
                    style="@style/number_button_style"
                    android:layout_weight="1"
                    android:text="0" />

                <Button
                    android:id="@+id/btn_dot"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="." />

                <Button
                    android:id="@+id/btn_equal"
                    style="@style/function_button_style"
                    android:layout_weight="1"
                    android:text="=" />
            </TableRow>

        </TableLayout>
    </LinearLayout>
</layout>